set +e

echo "🧪 Running tests..."
bun run test
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Commit aborted."
  exit 1
fi

echo "🪷 Running Formatter..."
prettier --write .
if [ $? -ne 0 ]; then
  echo "❌ Prettier formatting failed. Commit aborted."
  exit 1
fi

echo "✅ Formatter passed."


echo "🔍 Running ESLint..."
lint-staged
if [ $? -ne 0 ]; then
echo "❌ ESLint failed. Commit aborted."
exit 1
fi

echo "✅ Linting passed."

echo "✅ Linting and formatting passed. Proceeding with commit."
exit 0
